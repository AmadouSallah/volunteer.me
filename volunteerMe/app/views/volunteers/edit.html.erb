<h1>Editing Volunteer Information</h1>

<%= form_for :volunteer, url: volunteer_path(@volunteer), method: :patch do |f| %>


  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
   </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <%= fields_for @superpower do |u| %>
   <p>
    <%= u.label :NewSuperpower %><br>
    <%= u.text_field :name %>
    </p>
  <% end %>


  <% @volunteer.superpowers.each do |power| %>
    <%= f.fields_for :superpowers, power do |power_name| %>
      Super Power: <%= power_name.text_field :name %>
    <% end %>
  <% end %>





  <p>
    <%= f.submit "Submit" %>
  </p>

<% end %>

<%= link_to 'Back', volunteer_path %>
<%= link_to volunteer_path(@volunteer),
              method: :delete,
              data: {confirm: 'Are you sure you want to Delete your Account'},
              class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>