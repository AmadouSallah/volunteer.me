<%= form_for :event, url:  organization_event_path(@organization, @event), method: :patch do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description, :size=>"50x10"%>
</p>
<p>
  <%= f.label :requirements %><br>
  <%= f.text_field :requirements %>
</p>
<p>
  <%= f.label :commitment_type %><br>
  <%= f.select :commitment_type, commitment_array %>
</p>
<p>
  <%= f.label :date %><br>
  <%= f.date_select :date %>
</p>
<p>
  <%= f.label :time_start %><br>
  <%= f.time_select :time_start, {:ampm=> true}%>
</p>
<p>
  <%= f.label :time_end %><br>
  <%= f.time_select :time_end, {:ampm=> true}%>
</p>
<p>
  <%= f.label :address %><br>
  <%= f.text_field :address %>
</p>
<p>
  <%= f.label :city %><br>
  <%= f.text_field :city %>
</p>
<p>
  <%= f.label :state %><br>
  <%= f.select :state, state_array %>
</p>
<p>
  <%= f.label :country %><br>
  <%= f.select :country, country_array %>
</p>
<p>
  <%= f.label :spots %><br>
  <%= f.text_field :spots %>
</p>
<p>
<%= f.submit %>
</p>

<% end %>